{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src"  // Ensure this is set to 'src'
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
